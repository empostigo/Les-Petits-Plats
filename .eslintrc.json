{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["warn", "double"],
    "semi": ["warn", "never"],
    "no-console": "off",
    "consistent-return": "warn",
    "indent": ["error", 2],
    "import/extensions": ["error", "always"],
    "no-constructor-return": "off",
    "no-underscore-dangle": "off" /* disable this rule for Factory Pattern*/,
    "no-plusplus": "off",
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": ["error", "never"],
    "implicit-arrow-linebreak": "off",
    "no-param-reassign": "warn"
  }
}
